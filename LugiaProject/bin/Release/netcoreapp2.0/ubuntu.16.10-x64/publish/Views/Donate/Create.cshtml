@model NonProfitModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Non-Profit</h2>

@if (User.IsInRole("Admin"))
{
    <form asp-area="" asp-controller="Donate" asp-action="Create" method="post" id="createNonProfitForm">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Points</th>
                    <th scope="col">Points Goal</th>
                </tr>
            </thead>
            <tbody>

                    <tr>
                        <td>@Html.EditorFor(m => m.Name)</td>
                        <td>@Html.TextAreaFor(m => m.Description)</td>
                        <td>@Html.EditorFor(m => m.Points)</td>
                        <td>
                            @Html.EditorFor(m => m.PointsGoal)
                        </td>
                    </tr>
            </tbody>
        </table>
        <button type="submit" style="float: right" class="btn btn-primary">Create</button>
    </form>
}
