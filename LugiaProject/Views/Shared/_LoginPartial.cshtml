@using Microsoft.AspNetCore.Identity
@using LugiaProject.Models
@using LugiaProject.Data

@model ExploreModel

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _dbContext

@{ 
    

}

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" asp-controller="Explore" asp-action="Index" method="post" id="exploreForm" class="navbar-right">

        <ul class="nav navbar-nav navbar-right">
            
            <li>
                @if (Model != null)
                {
                    @Html.HiddenFor(m => m.Query, new { @Value = Model.Query })

                    for (int i = 0; i < Model.Result.Count; i++)
                    {
                        @Html.HiddenFor(m => m.Result[i].Title, new { @Value = Model.Result[i].Title })
                        @Html.HiddenFor(m => m.Result[i].Url, new { @Value = Model.Result[i].Url })
                    }
                    
                }
            </li>
                
            <li>
                <button type="submit" class="btn btn-primary navbar-btn navbar-link">Explore</button>
            </li>
        </ul>
    </form>
    
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
            
        </ul>
    </form>
}
else
