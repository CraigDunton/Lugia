@using System.Linq
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}
<link href="https://fonts.googleapis.com/css?family=Catamaran:400,800" rel="stylesheet">
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<style>
    .borderRight {
        border-right: 1px solid #38546d;
        vertical-align: middle;
        padding: 10px;
    }
    .buttonText {
        padding: 18px;
        font-weight: 400;
        font-size: 18px;
        font-family: 'Catamaran', sans-serif;
    }
</style>

<div style="width: 100%; text-align: center">
    <span style="display: block; font-size: 6em; font-family: 'Catamaran', sans-serif; font-weight: 800">
        Lugia
    </span>
    <p style="display: block; font-size: 2em; font-family: 'Catamaran', sans-serif; font-weight: 400">
        <span style="color: #8ff7a7">Donate</span> to the causes you love by <span style="color: #51bbfe">learning</span> more about them.
    </p>
    <section>
        @if (!SignInManager.IsSignedIn(User))
        {    
            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
            if (loginProviders.Count == 0)
            {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
            }
            else
            {
                <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in loginProviders)
                            {
                                <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="padding:0 !important"><i class="fa fa-2x fa-google-plus borderRight" aria-hidden="true"></i><span class="buttonText">Connect with @provider.Name</span></button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
    </section>
</div>